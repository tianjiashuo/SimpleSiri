<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.simplesiri.HomeActivity">
    <ImageView
        android:id="@+id/starback"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/linear_layout_divider"
    android:orientation="vertical"
    android:showDividers="middle">

    <TextView
        android:id="@+id/choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择造梦对象"
        android:gravity="center"
        android:textColor="@color/black"
        android:paddingTop="130px"
        android:paddingBottom="90px"
        android:layout_marginTop="20dp"
        android:textSize="40sp" />

    <ListView
        android:id="@+id/star_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:divider="@color/grey"
        android:dividerHeight="1px" >

    </ListView>

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>